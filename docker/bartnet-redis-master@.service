[Unit]
Description=Bartnet Redis
After=docker.service
Requires=docker.service

[Service]
Restart=always
User=core
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill %p-%i
ExecStartPre=-/usr/bin/docker rm %p-%i
ExecStartPre=/usr/bin/docker pull quay.io/opsee/redis
ExecStart=/usr/bin/docker run --name %p-%i -p 6379 -e SERVICE_NAME=bartnet-redis quay.io/opsee/redis
ExecStop=/usr/bin/docker stop %p-%i

[X-Fleet]
Conflicts=bartnet-redis-master@*.service
