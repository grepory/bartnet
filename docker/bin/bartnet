#!/usr/bin/env bash
top="$(dirname "$0")/.."

AWS=$(curl -X OPTIONS -f --connect-timeout 2 http://169.254.169.254/latest/ 2>/dev/null; echo $?)
CONFIG="$top/etc/config.json"
COMMAND="server"
OPTS="-cp /bartnet/lib/bartnet.jar"
NAMESPACE="bartnet.core"
AGGRESSIVE_OPTS="-server -XX:+UseConcMarkSweepGC -XX:+UseParNewGC -XX:+CMSParallelRemarkEnabled -XX:+AggressiveOpts -XX:+UseFastAccessorMethods -XX:+UseCompressedOops -XX:+CMSClassUnloadingEnabled"

ETCD_HOST="$(ifconfig docker0 | awk '/\<inet\>/ { print $2}')"
ETCD_PORT=2379

if [[ $AWS == 0 ]]; then
  eval "$(/opt/bin/ec2-env)"
  /opt/bin/s3kms get -b opsee-keys -o dev/vape.key > /bartnet/etc/vape.key
fi

gen_config()
{
  local config=$1
  cat > $config << EOF
{"db-spec":{
    "classname":"org.postgresql.Driver",
    "subprotocol":"postgresql",
    "host":"${DB_PORT_5432_TCP_ADDR:-${DB_HOST}}",
    "port":"5432",
    "subname":"${DB_NAME}",
    "user":"${DB_USER}",
    "password":"${DB_PASS}",
    "max-conns":6,
    "min-conns":1,
    "init-conns":1
},
"secret":"/bartnet/etc/vape.key",
"thread-util":0.9,
"max-threads":64,
"server":{ "port": 8080 },
"ami":{"owner-id":"933693344490", "tag":"stable", "keypair":"bastion-testing", "template-src":{"template-url":"beta/bastion-cf.template"}},
"mailgun":{"api_key":"key-d45f90c5a3e2ac33a26cd4c30715b71b",
           "url":"https://api.mailgun.net/v3/mg.opsee.co"},
"nsq": {"lookup":{"host":"nsqlookupd.opsy.co","port":4161},"producer":{"host":"nsqd.opsy.co","port":4150}},
"bastion-server":{ "port": 4080 }}
EOF

    cat $config
}

usage()
{
  cat << EOF
usage: $0 [-a] [java options ...] [command] [config-file]

Runs Riemann with the given configuration file.

OPTIONS:
  -h    Show this message
  -a    Adds some default aggressive, nonportable JVM optimization flags.

COMMANDS:
  start    Start the Bartnet server (this is the default)
  migrate  Migrate the databas

  Any unrecognized options (e.g. -XX:+UseParNewGC) will be passed on to java.
EOF
}

GEN_CONFIG=1
for arg in "$@"; do
  case $arg in
    "-a")
      OPTS="$AGGRESSIVE_OPTS $OPTS"
      ;;
    "-h")
      usage
      exit 0
      ;;
    -*)
      OPTS="$OPTS $arg"
      ;;
    test|start)
      COMMAND="server"
      ;;
    migrate)
      COMMAND="db"
      SUBCOMMAND="migrate"
      ;;
    *)
      CONFIG="$arg"
      unset GEN_CONFIG
     ;;
  esac
done

if [ -n "$GEN_CONFIG" ]; then
  gen_config $CONFIG
fi

exec java $OPTS "$NAMESPACE" "$COMMAND" "$SUBCOMMAND" "$CONFIG"
